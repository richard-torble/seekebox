# -----------------------------------------------------------------
# based on .gitignore for WordPress @salcode
# -----------------------------------------------------------------

# ignore config files
wp-config.php
wp-config-sample.php

# ignore readme files, where needed
readme.html

# ignore all files starting with . or ~
.*
~*

# ignore OS generated files
ehthumbs.db
Thumbs.db
ds_store

# ignore log files and databases
*.log
*.sql

# ignore compiled files
*.com
*.class
*.dll
*.exe
*.o
*.so

# ignore packaged files
*.7z
*.dmg
*.gz
*.iso
*.jar
*.rar
*.tar
*.zip

# -------------------------
# BEGIN Whitelisted Files
# -------------------------

# track these files, if they exist
!.gitignore
!.editorconfig
!.phpcs.xml.dist
!README.md
!CHANGELOG.md
!composer.json

# track favicon files, if they exist
!android-chrome-*.png
!apple-touch-icon*.png
!browserconfig.xml
!favicon*.png
!favicon*.ico
!manifest.json
!mstile-*.png
!safari-pinned-tab.svg
!site.webmanifest
